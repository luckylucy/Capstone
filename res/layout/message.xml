<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <CheckBox
        android:id="@+id/addressCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:checked="true"
        android:text="주소" />

   	<TextView
   	    android:id="@+id/textview1"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_alignLeft="@+id/addressCheckBox"
   	    android:layout_below="@+id/addressCheckBox"
   	    android:layout_marginTop="22dp"
   	    android:text="재난 상황을 선택하세요" />
   	
   	<GridLayout
   	    android:id="@+id/gridview"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_alignLeft="@+id/textview1"
   	    android:layout_below="@+id/textview1"
   	    android:columnCount="3" >
        
       <CheckBox
           android:id="@+id/emergency1"
           android:text="재난1"/>
       
       <CheckBox
           android:id="@+id/emergency2"
           android:text="재난2"/>
       
       <CheckBox
           android:id="@+id/emergency3"
           android:text="재난3"/>
       
       <CheckBox
           android:id="@+id/emergency4"
           android:text="재난4"/>
       
       <CheckBox
           android:id="@+id/emergency5"
           android:text="재난5"/>
       
       <CheckBox
           android:id="@+id/emergency6"
           android:text="재난6"/>
       
       <CheckBox
           android:id="@+id/emergency7"
           android:text="재난7"/>
       
       <CheckBox
           android:id="@+id/emergency8"
           android:text="재난8"/>
       
       <CheckBox
           android:id="@+id/emergency9"
           android:text="재난9"/>

    </GridLayout>
    
   	<EditText
   	    android:layout_alignLeft="@+id/addressCheckBox"
   	    android:layout_below="@+id/gridview"
   	    android:id="@+id/sendMessage"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:hint="하고싶은말 쓰기"/>

   	<Button
   	    android:id="@+id/Send"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_below="@+id/sendMessage"
   	    android:layout_centerHorizontal="true"
   	    android:text="Send" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<com.example.capstone.view.PagerSlidingTabStrip
    android:id="@+id/square_tab_frag_tab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/white"
        app:pstsDividerColor="@android:color/transparent"
        app:pstsIndicatorColor="@android:color/transparent"
        app:pstsShouldExpand="true"
        app:pstsTabSwitch="true"
        app:pstsUnderlineColor="#E4E3E2"/>    

    <android.support.v4.view.ViewPager
        android:id="@+id/square_tab_frag_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/square_tab_frag_tab" />

</RelativeLayout>


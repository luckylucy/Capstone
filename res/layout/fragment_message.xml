   	<GridLayout
   	    android:id="@+id/gridview"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_alignLeft="@+id/textview1"
   	    android:layout_below="@+id/textview1"
   	    android:columnCount="1" >
        
   	    
   	     
       <CheckBox
           android:id="@+id/emergency1"
           android:text="해양사고"/>
       
       <CheckBox
           android:id="@+id/emergency2"
           android:text="화재/산불" />
       
       <CheckBox
           android:id="@+id/emergency3"
           android:text="교통사고"/>
       
       <CheckBox
           android:id="@+id/emergency4"
           android:text="건물 붕괴 / 폭팔 "/>
       
       <CheckBox
           android:id="@+id/emergency5"
           android:text="납치 / 유괴 "/>

    </GridLayout>
   
   	     -->
   	     
   	 <GridLayout
   	     android:id="@+id/gridview"
   	     android:layout_width="wrap_content"
   	     android:layout_height="wrap_content"
   	     android:layout_alignLeft="@+id/textview1"
   	     android:layout_below="@+id/textview1"
   	     android:columnCount="3" >
    
   	     <Button
   	         android:id="@+id/button1"
   	         android:background="@drawable/icon_on_off"
   	         android:layout_height="wrap_content"
   	         android:layout_width="wrap_content"/>
   	     <Button
   	         android:id="@+id/button2"
   	         android:background="@drawable/icon_on_off"
   	         android:layout_height="wrap_content"
   	         android:layout_width="wrap_content"/>
   	     <Button
   	         android:id="@+id/button3"
   	         android:background="@drawable/icon_on_off"
   	         android:layout_height="wrap_content"
   	         android:layout_width="wrap_content"/>
   	     <Button
   	         android:id="@+id/button4"
   	         android:background="@drawable/icon_on_off"
   	         android:layout_height="wrap_content"
